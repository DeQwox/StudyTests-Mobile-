<!-- Views/CreateTestView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui">
    <StackPanel Margin="50" Spacing="20" Width="400">
        <TextBlock Text="Створення нового тесту" FontSize="22" HorizontalAlignment="Center"/>
        <TextBox Watermark="Назва тесту" Text="{Binding Name}"/>
        <TextBox Watermark="Пароль для проходження" Text="{Binding Password}"/>
        <Button Content="Створити тест" Command="{Binding CreateCommand}" HorizontalAlignment="Center" Width="200"/>
        <TextBlock Text="{Binding Result}" FontSize="16" Foreground="Green" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
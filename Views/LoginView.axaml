<!-- Views/LoginView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" Width="300">
        <TextBlock Text="Онлайн тестування" FontSize="24" HorizontalAlignment="Center"/>
        <TextBox Watermark="Логін" Text="{Binding Login}"/>
        <TextBox Watermark="Пароль" PasswordChar="*" Text="{Binding Password}"/>
        <Button Content="Увійти" Command="{Binding LoginCommand}" HorizontalAlignment="Center" Width="150"/>
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
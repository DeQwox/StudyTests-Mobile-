<!-- Views/AddQuestionView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="50" Spacing="15" Width="600">
        <TextBlock Text="Додати питання" FontSize="22" HorizontalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding MyTests}"
                  SelectedItem="{Binding SelectedTest}"
                  PlaceholderText="Оберіть тест"/>
        <TextBox Watermark="Текст питання" Text="{Binding Description}"/>
        <TextBox Watermark="Відповіді через ;" Text="{Binding Answers}"/>
        <TextBox Watermark="Індекс правильної (0-based)" Text="{Binding CorrectIndex}"/>
        <Button Content="Додати питання" Command="{Binding AddCommand}"/>
        <TextBlock Text="{Binding Result}" Foreground="Green"/>
    </StackPanel>
</UserControl>
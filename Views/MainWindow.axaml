<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OnlineTestingClient.Views.MainWindow"
        Title="StudyTests Mobile">
    <Grid RowDefinitions="Auto,*">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <Button Command="{Binding NavigateHome}">Home</Button>
            <Button Command="{Binding NavigateTests}">Tests</Button>
            <Button Command="{Binding NavigateResults}">Results</Button>
            <Button Command="{Binding NavigateStatistics}">Statistics</Button>
            <Button Command="{Binding NavigateAbout}">About</Button>
            <Button Command="{Binding Logout}">Logout</Button>
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding CurrentPage}"
                        ContentTemplate="{StaticResource Locator}" />
    </Grid>
</Window>
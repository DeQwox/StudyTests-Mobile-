<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OnlineTestingClient.Views.HomeView">
  <Grid>
    <StackPanel Spacing="10" IsVisible="{Binding !IsLoading}">
      <TextBlock Text="Ласкаво просимо до StudyTests Dashboard" FontSize="20" FontWeight="Bold"/>
      <TextBlock Text="{Binding SummaryMessage}"/>
    </StackPanel>
    
    <Border Background="#AA000000" IsVisible="{Binding IsLoading}">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#1F2937" Padding="40" CornerRadius="16">
            <StackPanel Spacing="10">
                <TextBlock Text="Завантаження..." Foreground="White" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="100"/>
            </StackPanel>
        </Border>
    </Border>
  </Grid>
</UserControl>